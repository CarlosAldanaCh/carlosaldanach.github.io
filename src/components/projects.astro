---
interface Project {
  title: string;
  image: string; // path inside /public
  repo: string;
  live?: string;
  status: string;
  summary: string;
  metrics?: string;
  tags: string[];
}

const projects: Project[] = [
  {
    title: "Age Estimation — ResNet50 (Computer Vision)",
    image: "/images/01_age_estimation_resnet50.png",
    repo: "https://github.com/CarlosAldanaCh/age-estimation-resnet50",
    status: "Featured",
    summary:
      "Face age prediction using TensorFlow/Keras + transfer learning with a reproducible training pipeline.",
    metrics: "MAE test ≈ 7.065 vs baseline ≈ 9.047 (≈22% improvement).",
    tags: ["TensorFlow", "Keras", "CV", "ResNet50", "Transfer Learning"],
  },
  {
    title: "Gold Recovery Prediction (Industrial ML)",
    image: "/images/02_gold_recovery_prediction.png",
    repo: "https://github.com/CarlosAldanaCh/Zyfra-gold-recovery-machine-learning-",
    status: "Featured",
    summary:
      "Predicts gold recovery efficiency in an industrial metallurgical process with strong data cleaning + modeling.",
    metrics: "sMAPE ↓ 6.4% / 6.8% vs baseline ≈ 11.3% (≈42% error reduction).",
    tags: ["scikit-learn", "Regression", "sMAPE", "Feature Engineering"],
  },
  {
    title: "Used Car Price Prediction (Rusty Bargain)",
    image: "/images/03_used_car_price_prediction.png",
    repo: "https://github.com/CarlosAldanaCh/Rusty_bargain_car_price_prediction",
    status: "Featured",
    summary:
      "Market price prediction for used vehicles, comparing models and trade-offs between quality and latency.",
    metrics: "LightGBM RMSE test ≈ 1419 vs baseline ≈ 2445; training ≈ 4.5s.",
    tags: ["LightGBM", "Regression", "RMSE", "Performance"],
  },
  {
    title: "IMDB Sentiment Classification (NLP)",
    image: "/images/04_imdb_sentiment_nlp.png",
    repo: "https://github.com/CarlosAldanaCh/sentiment-classification-imdb",
    status: "Case study",
    summary:
      "Sentiment analysis comparing TF-IDF baselines (LogReg/LinearSVC) vs fine-tuned BERT with proper evaluation.",
    metrics: "Test F1 ↑ 0.9226 (BERT) vs ~0.895 (LinearSVC) and baseline (Dummy).",
    tags: ["NLP", "TF-IDF", "LogReg", "LinearSVC", "BERT"],
  },
  {
    title: "Beta Bank Churn Model (Classification)",
    image: "/images/05_beta_bank_churn.png",
    repo: "https://github.com/CarlosAldanaCh/Beta-bank-churn-model",
    status: "Case study",
    summary:
      "Customer churn prediction focused on F1 optimization plus AUC-ROC reporting and thresholding.",
    metrics: "Best: Random Forest — F1 ↑ 0.63 • AUC ↑ 0.86 (meets target).",
    tags: ["Classification", "F1", "AUC-ROC", "Imbalanced Data"],
  },
  {
    title: "Customer Classification Project",
    image: "/images/06_customer_classification_ultra.png",
    repo: "https://github.com/CarlosAldanaCh/Customer-Classification-Project",
    status: "Case study",
    summary:
      "Supervised ML classification project with end-to-end workflow and clear reporting.",
    metrics: "Accuracy ↑ 79.5% vs baseline 69.5% (+10.0 pp).",
    tags: ["Machine Learning", "Classification", "EDA", "Modeling"],
  },
];
---

<section id="projects" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Selected work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => {
          const readme = `${project.repo}#readme`;
          const primary = project.live ?? readme;

          return (
            <div class="group rounded-2xl border border-[#ffffff10] bg-[#14141466] hover:bg-[#1414149c] transition overflow-hidden">
              <a
                href={primary}
                target="_blank"
                rel="noopener noreferrer"
                class="block"
                aria-label={`${project.title} - open`}
              >
                <div class="relative">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-52 md:h-64 object-cover group-hover:scale-[1.02] transition-transform duration-300"
                    loading="lazy"
                  />

                  <!-- readability overlay -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent"></div>

                  <!-- status badge -->
                  <div class="absolute top-4 left-4">
                    <span class="text-xs px-3 py-1 rounded-full border border-[#ffffff10] bg-[#0b0b0bcc] text-[var(--white-icon)]">
                      {project.status}
                    </span>
                  </div>
                </div>
              </a>

              <div class="p-5 space-y-3">
                <div class="flex items-start gap-3">
                  <div class="flex-grow">
                    <h4 class="text-xl font-semibold leading-tight">{project.title}</h4>
                  </div>

                  <div class="flex gap-2">
                    <a
                      target="_blank"
                      rel="noopener noreferrer"
                      href={project.repo}
                      aria-label="Repository"
                      class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition border border-[var(--white-icon-tr)] rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"></path>
                      </svg>
                    </a>

                    <a
                      target="_blank"
                      rel="noopener noreferrer"
                      href={primary}
                      aria-label={project.live ? "Live demo" : "Readme"}
                      class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition border border-[var(--white-icon-tr)] rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                      </svg>
                    </a>
                  </div>
                </div>

                <p class="text-sm md:text-base text-[var(--white-icon)]/90 leading-relaxed">
                  {project.summary}
                </p>

                {project.metrics ? (
                  <div class="rounded-xl border border-[#a476ff33] bg-[#0b0b0bcc] px-3 py-2">
                    <p class="text-sm font-medium text-[var(--sec)] metrics-glow">
                      {project.metrics}
                    </p>
                  </div>
                ) : null}

                <div class="flex flex-wrap gap-2 pt-1">
                  {project.tags.map((t) => (
                    <span class="text-xs px-3 py-1 rounded-full border border-[#ffffff10] text-[var(--white-icon)] bg-[#14141466]">
                      {t}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>

    <a
      target="_blank"
      rel="noopener noreferrer"
      href="https://github.com/CarlosAldanaCh?tab=repositories"
      aria-label="More repositories"
      class="w-full flex items-center justify-center gap-2 mt-10 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-[1.02]"
    >
      <span class="md:text-lg text-md">More projects on GitHub</span>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
        <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
      </svg>
    </a>
  </div>
</section>

<style is:global>
  .metrics-glow {
    text-shadow: 0 0 14px rgba(164, 118, 255, 0.35);
  }
</style>
